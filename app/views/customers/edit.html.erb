<h1>Edit your account details</h1>

<%= form_for @customer do |f| %>

  <%= render :partial => 'layouts/errors', :locals => { :object => @customer } %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <%= f.submit 'Save', :class => 'btn btn-success btn-large' %>
<% end %>

<%= link_to t('View your delivery addresses'), addresses_path %> or
<%= link_to t('Add new address'), new_address_path %>