<h1>Sign Up</h1>

<%= form_for @customer do |f| %>

  <%= render :partial => 'layouts/errors', :locals => { :object => @customer } %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Sign Up", :class => 'btn btn-primary btn-large' %>
<% end %>