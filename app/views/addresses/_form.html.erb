<%= form_for @address do |f| %>

  <%= render :partial => 'layouts/errors', :locals => { :object => @address } %>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :post_code %>
    <%= f.text_field :post_code %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :country_code %>
    <%= f.text_field :country_code %>
  </div>

  <%= f.submit 'Save', :class => 'btn btn-primary btn-large' %>
<% end %>