<table width="300px">
  <caption>Your cart</caption>
  <thead>
    <tr align="left">
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.item.name %></td>
        <td><%= number_to_currency item.item.price %></td>
        <td><%= pluralize(item.quantity, 'unit', 'units') %></td>
        <td><%= number_to_currency (item.price * item.quantity) %></td>
        <td>
          <%= link_to 'add', "/cart/add/#{item.item.id}", :method => :post, :id => item.item.id %>
          <%= link_to 'del', "/cart/remove/#{item.item.id}", :method => :post, :id => item.item.id %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td>Total:</td>
      <td><%= number_to_currency @order.total %></td>
    </tr>
  </tbody>
</table>
<br />
