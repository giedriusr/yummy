<section id="billboard">
  <div class="container">
		<div class="search-box">
		  <h1><%= t 'Order online for free' %></h1>

		  <br>
		  <%= render :partial => 'layouts/errors', :locals => { :object => @search } %>

		  <%= form_tag(search_results_path, :method => :get) do %>
				<label>What would you like?</label>
				<%= search_field_tag 'search[query]', '', :class => 'span5', :placeholder => 'i.e. pizza, salads, cola', :autocomplete => :off %>
			  <br>
			  <%= submit_tag 'Find Restaurants', :class => 'btn btn-primary btn-large', :name => nil, :disable_with => 'Please wait..' %>
		  <% end %>

		</div>
  </div>

</section>
