<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t('yummy'), root_path, :class => 'brand' %>
      <ul class="nav pull-right">
        <% if mobile_device? %>
          <li><%= link_to t('Web version'), :mobile => 0 %></li>
        <% else %>
          <li><%= link_to t('Mobile version'), :mobile => 1 %></li>
        <% end %>

        <% if current_user %>
          <li><%= link_to t('Account'), account_path %></li>
          <li><%= link_to t('Profile'), profile_path %></li>
          <li><%= link_to t('Cart'), cart_path %></li>
          <li>
            <%= link_to t('Log Out'), logout_path %>
          </li>
        <% else %>
          <li><%= link_to t('Sign Up'), signup_path %></li>
          <li class="divider-vertical"></li>
          <li><a href="#loginBox" data-toggle="modal"><%= t 'Log In' %></a></li>
        <% end %>

        <li class="divider-vertical"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Language <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to t('English'), '?locale=en' %></li>
            <li><%= link_to t('Greek'), '?locale=el' %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>