<!DOCTYPE html>
<html>
  <head>
    <title>Administration panel</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="flash">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>
    </div>

    <% if current_employee %>
      <header>
        <%= link_to '< Back to site', root_path %> |
        <%= link_to 'Admin dashboard', admin_path %> |
        <%= link_to 'Providers', admin_providers_path %> |
        <%= link_to 'Translations', admin_translations_path %>
      </header>
      <% end %>

<hr />
    <%= yield %>

    <br /><br />
    <footer>
      &copy; <%= Time.now.strftime('%Y') %>.
      <% if current_employee %>
        Logged in as: <strong><%= current_employee.email %></strong>. <%= link_to "Log Out", admin_logout_path %>
      <% end %>
    </footer>


  </body>
</html>
